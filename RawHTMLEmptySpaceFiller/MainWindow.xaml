<Window x:Class="RawHTMLEmptySpaceFiller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="RawHTMLEmptySpaceFiller" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <RichTextBox Grid.Row="0" Name="InputTextBox"/>
        <Button Margin="5, 10" Grid.Row="1" Content="Change 'whitespaces'" Click="Button_Click"/>

    </Grid>
</Window>
